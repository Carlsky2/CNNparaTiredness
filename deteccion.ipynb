   "source": [
    "import cv2\n",
    "import tensorflow as tf\n",
    "import numpy as np\n",
    "\n",
    "\n",
    "MODEL_PATH = \"modelo_mobilenetv2.keras\"\n",
    "IMAGE_SIZE = (224, 224)\n",
    "CLASS_NAMES = [\"microsleep\", \"yawn\", \"neutral\"]  \n",
    "\n",
    "\n",
    "print(\"Cargando modelo...\")\n",
    "model = tf.keras.models.load_model(MODEL_PATH)\n",
    "print(\"modelo cargado.\")\n",
    "\n",
    "\n",
    "policy = tf.keras.mixed_precision.global_policy()\n",
    "print(f\"Pol칤tica activa: {policy.name}\")\n",
    "\n",
    "# ================== CAPTURA DE C츼MARA ==================\n",
    "cap = cv2.VideoCapture(0)  # 0 = c치mara principal\n",
    "\n",
    "if not cap.isOpened():\n",
    "    print(\"No se pudo acceder a la c치mara.\")\n",
    "    exit()\n",
    "\n",
    "print(\"游꿘 Presion치 'q' para salir.\")\n",
    "\n",
    "while True:\n",
    "    ret, frame = cap.read()\n",
    "    if not ret:\n",
    "        print(\"Error leyendo la c치mara.\")\n",
    "        break\n",
    "\n",
    "    # Preprocesamiento\n",
    "    img = cv2.resize(frame, IMAGE_SIZE)\n",
    "    img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)\n",
    "    img = img.astype(np.float32) / 255.0  # normalizar\n",
    "    img = np.expand_dims(img, axis=0)     # agregar batch\n",
    "\n",
    "    # Predicci칩n\n",
    "    preds = model.predict(img, verbose=0)[0]\n",
    "    pred_idx = np.argmax(preds)\n",
    "    confidence = preds[pred_idx]\n",
    "\n",
    "    
    "    if confidence > 0.7:\n",
    "        label = f\"{CLASS_NAMES[pred_idx]} ({confidence*100:.1f}%)\"\n",
    "        color = (0, 255, 0) if pred_idx == 2 else (0, 0, 255)\n",
    "    else:\n",
    "        label = \"Ninguna expresi칩n detectada\"\n",
    "        color = (200, 200, 200)\n",
    "\n",
    "    
    "    cv2.putText(frame, label, (30, 50),\n",
    "                cv2.FONT_HERSHEY_SIMPLEX, 1, color, 2, cv2.LINE_AA)\n",
    "\n",
    "    cv2.imshow(\"Detecci칩n de expresiones\", frame)\n",
    "\n",
    "    # Salir con 'q'\n",
    "    if cv2.waitKey(1) & 0xFF == ord('q'):\n",
    "        break\n",
    "\n",
    "# ================== LIMPIAR ==================\n",
    "cap.release()\n",
    "cv2.destroyAllWindows()\n"
   ]
  }
